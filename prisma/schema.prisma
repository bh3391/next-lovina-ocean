// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  
}

model Package {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  priceSharing  Int      @default(0)
  pricePrivate  Int      @default(0)
  image       String?
  features    String[]
  itinerary   Json?
  createdAt   DateTime @default(now())
}

model Blog {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  image     String?
  createdAt DateTime @default(now())
}


model Setting {
  id    String @id 
  value Json
}

model Message { // Untuk fitur Contact Us
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}
model Gallery {
  id          String   @id @default(cuid())
  title       String?
  imageUrl    String
  category    String?  // "Dolphin", "Snorkeling", "Sunrise","Tour"
  createdAt   DateTime @default(now())
}